<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="359"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="0" >

    <shape
        android:innerRadius="@dimen/x30"
        android:shape="ring"
        android:thickness="@dimen/x6"
        android:useLevel="false" >
        <gradient
            android:centerColor="#fca5a8"
            android:centerY="0.50"
            android:endColor="#f95c71"
            android:startColor="#FFFFFF"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>