<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_login_bg" >

    <LinearLayout
        android:id="@+id/ll_register_firstep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/y200"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y10"
            android:scaleType="centerCrop" >
        </ImageView>

        <RelativeLayout
            android:id="@+id/rl_register_firststep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y315"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_border_white_line"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@drawable/shape_border_white" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/rl_register_rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105" >

                <ImageView
                    android:id="@+id/iv_register_phone_icon"
                    android:layout_width="@dimen/x46"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/register_phone_icon" />

                <EditText
                    android:id="@+id/et_register_tel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_register_phone_icon"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="输入手机号码"
                    android:inputType="number"
                    android:textColor="@color/bg_white"
                    android:textColorHint="@color/bg_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/x36" >
                </EditText>
            </RelativeLayout>

            <View
                android:id="@+id/view_login_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@+id/rl_register_rl1"
                android:layout_centerInParent="true"
                android:background="@color/bg_white" />

            <RelativeLayout
                android:id="@+id/rl_register_rl2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105"
                android:layout_below="@+id/view_login_view1" >

                <ImageView
                    android:id="@+id/iv_register_phonecode_icon"
                    android:layout_width="@dimen/x46"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/register_phonecode_icon" />

                <EditText
                    android:id="@+id/et_register_phonecode"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_register_getphonecode"
                    android:layout_toRightOf="@+id/iv_register_phonecode_icon"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="输入验证码"
                    android:inputType="number"
                    android:textColor="@color/bg_white"
                    android:textColorHint="@color/bg_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/x36" />

                <TextView
                    android:id="@+id/tv_register_getphonecode"
                    android:layout_width="@dimen/x250"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/orange_grey_bg_select"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/x30" >
                </TextView>
            </RelativeLayout>

            <View
                android:id="@+id/view_login_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@+id/rl_register_rl2"
                android:layout_centerInParent="true"
                android:background="@color/bg_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105"
                android:layout_below="@+id/view_login_view2"
                android:orientation="horizontal"
                android:weightSum="2" >

                <LinearLayout
                    android:id="@+id/rl_register_male"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"
                        android:src="@drawable/icon_register_male" />

                    <TextView
                        style="@style/reg_log_textview"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/register_male_selectstyle" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_register_female"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/y80"
                        android:src="@drawable/icon_register_female" />

                    <TextView
                        style="@style/reg_log_textview"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/y20"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/register_female_selectstyle" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_register_secondstep"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y315"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_marginTop="@dimen/y20"
            android:background="@drawable/shape_border_white_line"
            android:visibility="gone" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.3"
                android:background="@drawable/shape_border_white" >
            </ImageView>

            <RelativeLayout
                android:id="@+id/rl_reigster_second1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105" >

                <ImageView
                    android:id="@+id/iv_register_userid_icon"
                    android:layout_width="@dimen/x46"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/register_userid_icon" />

                <TextView
                    android:id="@+id/tv_register_usrname"
                    style="@style/reg_log_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_register_userid_icon"
                    android:text="用户名" >
                </TextView>
            </RelativeLayout>

            <View
                android:id="@+id/view_register_second1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@+id/rl_reigster_second1"
                android:layout_centerInParent="true"
                android:background="@color/bg_white" />

            <RelativeLayout
                android:id="@+id/rl_register_second2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105"
                android:layout_below="@+id/view_register_second1" >

                <ImageView
                    android:id="@+id/iv_login_userpwd_icon"
                    android:layout_width="@dimen/x46"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/userpwd_icon" />

                <EditText
                    android:id="@+id/et_register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_login_userpwd_icon"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="密码"
                    android:inputType="textPassword"
                    android:textColor="@color/bg_white"
                    android:textColorHint="@color/bg_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>

            <View
                android:id="@+id/view_register_second2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_below="@+id/rl_register_second2"
                android:layout_centerInParent="true"
                android:background="@color/bg_white" />

            <RelativeLayout
                android:id="@+id/rl_register_second3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y105"
                android:layout_below="@+id/view_register_second2" >

                <ImageView
                    android:id="@+id/iv_login_userpwd_icon2"
                    android:layout_width="@dimen/x46"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:src="@drawable/register_makesure_pwd_icon" />

                <EditText
                    android:id="@+id/et_register_confirmpwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_login_userpwd_icon2"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:textColor="@color/bg_white"
                    android:textColorHint="@color/bg_white"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/x36" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_register_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y98"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y50"
            android:background="@drawable/shape_border_rl_lightbluecolor"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/bg_white"
            android:textSize="@dimen/x42"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_register_phoneforshow"
            style="@style/reg_log_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/y30"
            android:text="18600897470"
            android:visibility="gone" >
        </TextView>

        <RelativeLayout
            android:id="@+id/rl_login_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y110"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_border_rl_lightbluecolor" >

            <TextView
                android:id="@+id/tv_register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x60"
                android:text="直接登录"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/x42" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x60"
                android:src="@drawable/goto_icon"
                android:visibility="gone" >
            </ImageView>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:alpha="0.3"
                android:background="@color/bg_white"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/word_black"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/custom_progress" />
    </RelativeLayout>

</RelativeLayout>