<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_cacheload_redcircle"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/shape_red_circle"
            android:gravity="center"
            android:text="ä¸€"
            android:textColor="@color/bg_white"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp15" >

            <ImageView
                android:id="@+id/iv_cacheload_pic"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp120"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:background="@drawable/default_logo" />

            <ImageView
                android:id="@+id/iv_play_dowm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/cahe_down" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10" >

            <TextView
                android:id="@+id/tv_cacheload_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/str_init_text"
                android:textColor="@color/bg_dark_black" />

            <ProgressBar
                android:id="@+id/pb_show_progress"
                style="@style/app_ProgressBar_Horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:max="100" />

            <TextView
                android:id="@+id/tv_cacheload_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/str_init_text"
                android:textColor="@color/bg_black" />
             <TextView
                android:id="@+id/tv_cacheload_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="@string/str_init_text"
                android:textColor="@color/bg_black" />
              <TextView
                android:id="@+id/tv_cacheload_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/str_init_text"
                android:textColor="@color/bg_black" />
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_partition_line_style"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15" />

</LinearLayout>