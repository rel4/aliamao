<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/app_head_title" />

    <LinearLayout
        android:id="@+id/ll_base_page_delete_or_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:background="@color/app_line_network" />

            <View
                android:layout_width="@dimen/dp1"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/app_line_network" />

            <Button
                android:id="@+id/btn_base_page_all_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="全部清除"
                android:textColor="@color/bg_dark_black"
                android:textSize="17sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_alignParentBottom="true"
                android:background="@color/app_line_network" />

            <Button
                android:id="@+id/btn_base_page_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:text="取消"
                android:textColor="@color/bg_dark_black"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_left_collect"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:listSelector="#00000000" >
    </com.handmark.pulltorefresh.library.PullToRefreshListView>

</LinearLayout>