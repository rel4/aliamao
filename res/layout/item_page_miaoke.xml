<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x30" >

        <com.aliamauri.meat.view.CircleImageView
            android:id="@+id/civ_ipmiaoke_headicon"
            android:layout_width="@dimen/x107"
            android:layout_height="@dimen/y107"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_launch" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/ll_ipmiaoke_add"
            android:layout_toRightOf="@+id/civ_ipmiaoke_headicon"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_ipmiaoke_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夏正在"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_ipmiaoke_sexandage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@drawable/bg_gender_selectstyle"
                    android:drawableLeft="@drawable/icon_gender_selectstyle"
                    android:drawablePadding="@dimen/x5"
                    android:paddingLeft="@dimen/x10"
                    android:paddingRight="@dimen/x10"
                    android:paddingTop="@dimen/x2"
                    android:text="21"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/x24" />

                <TextView
                    android:id="@+id/tv_ipmiaoke_province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="北京"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ipmiaoke_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:singleLine="true"
                android:text="习近平中俄互为重要战略伙伴"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x26" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ipmiaoke_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y36"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_ipmiaoke_add_selectstyle" />

            <TextView
                android:id="@+id/tv_ipm_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y5"
                android:text="加好友"
                android:textColor="@drawable/color_mainfalse_greyblacktrue_selectstyle"
                android:textSize="@dimen/x30" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/horizontal_line_style" />

</LinearLayout>