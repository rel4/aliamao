<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.aliamauri.meat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:paddingLeft="@dimen/x30"
    android:paddingRight="@dimen/x30"
    android:paddingTop="@dimen/x20"
   
     >

    <com.aliamauri.meat.view.CircleImageView
        android:id="@+id/civ_item_user_icon"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:layout_marginRight="@dimen/x30"
        android:src="@drawable/head_default_icon"
        app:border_color="@color/line_fl_text"
        app:border_width="@dimen/x1" />

    <TextView
        android:id="@+id/tv_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/civ_item_user_icon"
        android:ellipsize="end"
        android:maxLength="10"
        android:textColor="@color/word_black"
        android:textSize="@dimen/x30" />

    <TextView
        android:id="@+id/tv_item_user_hf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/time_word_black"
        android:textSize="@dimen/x30" />

    <TextView
        android:id="@+id/tv_item_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user_name"
        android:layout_marginTop="@dimen/x5"
        android:layout_toRightOf="@id/civ_item_user_icon"
        android:textColor="@color/time_word_black"
        android:textSize="@dimen/x26" />

    <TextView
        android:id="@+id/tv_item_user_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_user_time"
        android:layout_marginTop="@dimen/x5"
          android:layout_marginBottom="@dimen/x20"
        android:layout_toRightOf="@id/civ_item_user_icon"
        android:textColor="@color/word_black"
        
        android:textSize="@dimen/x30" />

    <View style="@style/horizontal_line_style" 
        android:layout_alignParentBottom="true"/>

</RelativeLayout>