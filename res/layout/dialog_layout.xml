<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_dialog" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="@dimen/x660"
        android:layout_height="@dimen/y320"
        
        android:background="@drawable/bg_dialog" >

        <TextView
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
         	android:id="@+id/tv_dialog_nam_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y70"
            android:textColor="@color/word_black"
            android:textSize="@dimen/x42" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y60"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_dialog_ok"
                style="@style/dialog_btn_text_style"
                android:layout_marginRight="@dimen/x60"
                android:background="@drawable/bg_dialog_btn_ok"
                android:text="@string/text_dialog_btn_ok"
                android:textColor="@color/bg_white" />

            <Button
                android:id="@+id/btn_dialog_no"
                style="@style/dialog_btn_text_style"
                android:background="@drawable/bg_dialog_btn_no"
                android:text="@string/text_dialog_btn_no"
                android:textColor="@color/word_black" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>
