<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_greywhite"
        android:orientation="vertical" >

        <include layout="@layout/title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:background="@color/bg_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_editdata_headicon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y140"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <com.aliamauri.meat.view.CircleImageView
                    android:id="@+id/ci_editdata_headicon"
                    android:layout_width="@dimen/x100"
                    android:layout_height="@dimen/y100"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/iv_editdata_head_jiantou"
                    android:text="修改头像"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_editdata_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/iv_editdata_head_jiantou"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x32"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_editdata_head_jiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />

            <RelativeLayout
                android:id="@+id/rl_editdata_nickname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="名字"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_editdata_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/iv_editdata_jiantou1"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_editdata_jiantou1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />

            <RelativeLayout
                android:id="@+id/rl_editdata_age"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="年龄"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_editdata_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/iv_editdata_jiantou2"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_editdata_jiantou2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View
                style="@style/horizontal_line_style"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_editdata_gender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y98"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="性别"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_editdata_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_toLeftOf="@+id/iv_editdata_jiantou3"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:id="@+id/iv_editdata_jiantou3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />

            <RelativeLayout
                android:id="@+id/rl_editdata_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:minHeight="@dimen/y148"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/y30"
                    android:layout_marginTop="@dimen/y30"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名"
                        android:textColor="@color/word_black"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/tv_editdata_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/x20"
                        android:textColor="@color/word_greyblack"
                        android:textSize="@dimen/x32" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/bg_white"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_editdata_pland"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y148"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现居地"
                        android:textColor="@color/word_black"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/tv_editdata_pland"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/word_greyblack"
                        android:textSize="@dimen/x32" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />

            <RelativeLayout
                android:id="@+id/rl_editdata_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y148"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职业"
                        android:textColor="@color/word_black"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/tv_editdata_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="生产/工艺/制造"
                        android:textColor="@color/word_greyblack"
                        android:textSize="@dimen/x28" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />

            <RelativeLayout
                android:id="@+id/rl_editdata_hobby"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y148"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兴趣爱好"
                        android:textColor="@color/word_black"
                        android:textSize="@dimen/x32" />

                    <TextView
                        android:id="@+id/tv_editdata_hobby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜欢什么？"
                        android:textColor="@color/word_greyblack"
                        android:textSize="@dimen/x28" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/wd_jr" />
            </RelativeLayout>

            <View style="@style/horizontal_line_style" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>