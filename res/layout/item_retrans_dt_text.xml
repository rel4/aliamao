<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey" >

    <RelativeLayout
        android:id="@+id/rl_item_wrod"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y180"
        android:layout_marginBottom="@dimen/y20"
        android:background="@color/bg_white" >

        <TextView
            android:id="@+id/tv_item_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:text="文字"
            android:textColor="@color/title_word_black"
            android:textSize="@dimen/x32" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_item_word"
            android:paddingLeft="@dimen/x20"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_text_hite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/text_text_hite"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x32" />

            <ImageView
                android:id="@+id/iv_item_text_icon_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:visibility="gone"
                android:src="@drawable/delete_icon" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>