<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_friend_classify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:visibility="gone" >
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/x30" >

        <com.aliamauri.meat.view.CircleImageView
            android:id="@+id/ci_frienditem_icon"
            android:layout_width="@dimen/x98"
            android:layout_height="@dimen/y98"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/ci_frienditem_icon"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word_black"
                android:textSize="@dimen/x36" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_frienditem_sex"
                    android:layout_width="@dimen/x58"
                    android:layout_height="@dimen/y30"
                    android:drawableLeft="@drawable/friend_sex_selectstyle"
                    android:paddingLeft="@dimen/x10"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/x22" />

                <TextView
                    android:id="@+id/tv_fi_authenticate"
                    android:layout_width="@dimen/x58"
                    android:layout_height="@dimen/y30"
                    android:layout_marginLeft="@dimen/x20"
                    android:background="@drawable/authenticate"
                    android:gravity="center"
                    android:text="认证"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/x22" />

                <TextView
                    android:id="@+id/tv_frienditem_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x26" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y48"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@drawable/newdynamic" />
    </RelativeLayout>

</LinearLayout>