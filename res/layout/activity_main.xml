<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_amain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite" >

    <FrameLayout
        android:id="@+id/fl_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_am_buttom" >
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_am_buttom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_title_bg_color" >

        <LinearLayout
            android:id="@+id/ll_am_buttom"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_home_title_nearby"
                style="@style/home_bot_title_theme" >

                <ImageView
                    style="@style/home_bot_title_theme_icon"
                    android:src="@drawable/base_home_selectstyle" />

                <TextView
                    style="@style/home_bot_title_theme_name"
                    android:text="精选"
                    android:textColor="@drawable/color_title_greyblack_selectstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_title_addr"
                style="@style/home_bot_title_theme" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        style="@style/home_bot_title_theme_icon"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/base_addr_selectstyle" />

                    <TextView
                        android:id="@+id/unread_msg_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x30"
                        android:layout_marginTop="@dimen/y2"
                        android:background="@drawable/shape_circle_maincolor"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/x22" />
                </RelativeLayout>

                <TextView
                    style="@style/home_bot_title_theme_name"
                    android:text="通讯录"
                    android:textColor="@drawable/color_title_greyblack_selectstyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_home_title_find"
                style="@style/home_bot_title_theme" >

                <ImageView
                    style="@style/home_bot_title_theme_icon"
                    android:src="@drawable/base_find_selectstyle" />

                <TextView
                    style="@style/home_bot_title_theme_name"
                    android:text="发现"
                    android:textColor="@drawable/color_title_greyblack_selectstyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_title_my"
                style="@style/home_bot_title_theme" >

                <ImageView
                    style="@style/home_bot_title_theme_icon"
                    android:src="@drawable/base_my_selectstyle" />

                <TextView
                    style="@style/home_bot_title_theme_name"
                    android:text="我的"
                    android:textColor="@drawable/color_title_greyblack_selectstyle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                style="@style/horizontal_line_style"
                android:layout_marginTop="@dimen/y40" />

            <View
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y160"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_activity_main_btn" />

            <View
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y90"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y70"
                android:background="@color/bottom_title_bg_color" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_home_title_search_icon"
        android:layout_width="@dimen/x102"
        android:layout_height="@dimen/y102"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y20"
        android:src="@drawable/home_bot_icon_ss_djh" />

</RelativeLayout>