<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x108"
    android:background="@color/bg_greywhite"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/padding_search_bar"
    android:paddingRight="27dp"
    android:paddingTop="5dp" >

    <EditText
        android:id="@+id/query"
        style="@style/eidtText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:background="@drawable/bg_et_ht_search"
        android:drawableLeft="@drawable/fdj"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textColor="@color/word_black"
        android:textSize="@dimen/x28" />

    <ImageButton
        android:id="@+id/search_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:background="@android:color/transparent"
        android:padding="6dp"
        android:src="@drawable/search_clear"
        android:visibility="invisible" />

</RelativeLayout>