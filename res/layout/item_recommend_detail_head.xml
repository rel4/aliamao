<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp15"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_detail_tital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/str_load"
        android:textColor="@color/bg_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_detail_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_marginTop="@dimen/dp15"
        android:text="@string/str_load"
        android:textColor="@color/bg_text_gray"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10" >

        <TextView
            android:id="@+id/tv_datail_reader_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp15"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/str_load"
            android:textColor="@color/bg_text_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_datail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp15"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text="@string/str_load"
            android:textColor="@color/bg_text_gray"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        style="@style/horizontal_partition_line_style"
        android:layout_marginTop="@dimen/dp15" />

</LinearLayout>