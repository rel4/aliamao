<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        android:background="@drawable/shape_border_grey_blackline"
        android:orientation="vertical" >

        <TextView
            android:textSize="13sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp90"
            android:background="@color/bg_color"
            android:text="您的手机空间不足，请先清理您的缓存空间"
            android:textColor="#525252" />

        <View style="@style/horizontal_partition_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_white" >

            <View
                android:id="@+id/v_centerHorizontal"
                android:layout_width="1dp"
                android:layout_height="@dimen/dp44"
                android:layout_centerHorizontal="true"
                android:background="@color/app_line_network" />

            <TextView
                android:id="@+id/tv_not_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/v_centerHorizontal"
                android:gravity="center"
                android:text="暂不清理"
                android:textColor="#8e8e8e" />

            <TextView
                android:id="@+id/tv_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/v_centerHorizontal"
                android:gravity="center"
                android:text="去清理"
                android:textColor="#3bb12f" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>