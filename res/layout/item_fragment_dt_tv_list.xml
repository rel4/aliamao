<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y390" >

        <ImageView
            android:id="@+id/tv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/x30"
            android:paddingRight="@dimen/x15"
            android:paddingTop="@dimen/x30" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.aliamauri.meat.view.CircleImageView
                    android:id="@+id/iv_avater_one"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/tv_user_msg_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x200"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@+id/iv_avater_one"
                    android:background="@drawable/shape_show_corner"
                    android:enabled="true"
                    android:gravity="center"
                    android:maxEms="20"
                    android:padding="@dimen/x5"
                    android:singleLine="true"
                    android:textColor="@color/bg_white"
                    android:textSize="13sp" >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20" >

                <com.aliamauri.meat.view.CircleImageView
                    android:id="@+id/iv_avater_two"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/tv_user_msg_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x200"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@+id/iv_avater_two"
                    android:background="@drawable/shape_show_corner"
                    android:enabled="true"
                    android:maxEms="20"
                    android:padding="@dimen/x5"
                    android:singleLine="true"
                    android:textColor="@color/bg_white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20" >

                <com.aliamauri.meat.view.CircleImageView
                    android:id="@+id/iv_avater_three"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/tv_user_msg_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x200"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@+id/iv_avater_three"
                    android:background="@drawable/shape_show_corner"
                    android:enabled="true"
                    android:maxEms="20"
                    android:padding="@dimen/x5"
                    android:singleLine="true"
                    android:textColor="@color/bg_white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y20" >

                <com.aliamauri.meat.view.CircleImageView
                    android:id="@+id/iv_avater_four"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:layout_alignParentRight="true" />

                <TextView
                    android:id="@+id/tv_user_msg_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x200"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_toLeftOf="@+id/iv_avater_four"
                    android:background="@drawable/shape_show_corner"
                    android:enabled="true"
                    android:maxEms="20"
                    android:padding="@dimen/x5"
                    android:singleLine="true"
                    android:textColor="@color/bg_white"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_play_circle" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/play_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_ifdtl_buttom"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y102"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_ifdtl_filetitle"
            android:paddingBottom="@dimen/x10" >

            <TextView
                android:id="@+id/tv_film_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="@dimen/x30"
                android:text="@string/loading"
                android:textColor="@color/bg_white"
                android:textSize="@dimen/x32" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/ll_ifdtl_bright" >

            <com.aliamauri.meat.view.CircleImageView
                android:id="@+id/civ_ifdtl_headicon"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y70"
                android:layout_centerVertical="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x20"
                android:layout_toRightOf="@+id/civ_ifdtl_headicon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_ifdtl_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="@string/loading"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_ifdtl_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:text="@string/loading"
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x26" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ifdtl_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_film_dz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/head"
                android:drawablePadding="@dimen/x10"
                android:text="@string/loading"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x22" />

            <View
                style="@style/vertical_line_style"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30" />

            <TextView
                android:id="@+id/tv_film_pl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pingll_iocn"
                android:drawablePadding="@dimen/x10"
                android:text="@string/loading"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x22" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="#f2f2f2" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:background="@drawable/bg_ifdtl_divider" />
    </RelativeLayout>

</LinearLayout>