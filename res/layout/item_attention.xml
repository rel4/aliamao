<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20" >

        <com.aliamauri.meat.view.CircleImageView
            android:id="@+id/civ_iattention_headicon"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_centerVertical="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@+id/civ_iattention_headicon"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_iattention_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x32" />

                <TextView
                    android:id="@+id/tv_iattention_sexage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_toRightOf="@+id/tv_iattention_nickname"
                    android:background="@drawable/bg_gender_selectstyle"
                    android:drawableLeft="@drawable/icon_gender_selectstyle"
                    android:paddingLeft="@dimen/x5"
                    android:paddingRight="@dimen/x5"
                    android:textColor="@color/bg_white"
                    android:textSize="@dimen/x22" />

                <TextView
                    android:id="@+id/tv_iattention_pland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x5"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_toRightOf="@+id/tv_iattention_sexage"
                    android:textColor="@color/word_black"
                    android:textSize="@dimen/x22" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_iattention_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_iattention_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/y36"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_ipmiaoke_add_selectstyle" />

            <TextView
                android:id="@+id/tv_iattention_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y5"
                android:text="加关注"
                android:textColor="@drawable/color_mainfalse_greyblacktrue_selectstyle"
                android:textSize="@dimen/x30" />
        </LinearLayout>

        <View style="@style/horizontal_line_style" />
    </RelativeLayout>

</LinearLayout>