<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y232"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        tools:context=".MainActivity" >

        <LinearLayout
            android:id="@+id/ll_idmb_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/v_idmb_center"
            android:background="@color/bg_white"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_idmb_image1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launch" />

            <TextView
                android:id="@+id/tv_idmb_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginTop="@dimen/y10"
                android:enabled="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="电影标题"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <View
            android:id="@+id/v_idmb_center"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_centerInParent="true" />

        <LinearLayout
            android:id="@+id/ll_idmb_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v_idmb_center"
            android:background="@color/bg_white"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_idmb_image2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y170"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launch" />

            <TextView
                android:id="@+id/tv_idmb_image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:enabled="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/word_greyblack"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>