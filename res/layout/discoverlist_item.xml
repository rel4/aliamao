<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:background="@color/bg_white" >

        <com.aliamauri.meat.view.RoundedImageView
            android:id="@+id/iv_discoverlist_icon"
            android:layout_width="@dimen/x110"
            android:layout_height="@dimen/x110"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20" />

        <TextView
            android:id="@+id/tv_discoverlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_discoverlist_icon"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/iv_discoverlist_icon"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="@string/loading"
            android:textColor="@color/word_black"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_discoverlist_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_discoverlist_icon"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/iv_discoverlist_icon"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x26" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_discoverlist_icon"
            android:layout_marginBottom="@dimen/y10"
            android:layout_marginLeft="@dimen/x2"
            android:layout_toRightOf="@id/tv_discoverlist_number"
            android:text="@string/str_tag"
            android:textColor="@color/word_black"
            android:textSize="@dimen/x26" />

        <TextView
            android:id="@+id/tv_discoverlist_try"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/item_btn_bg"
            android:gravity="center"
            android:paddingBottom="@dimen/y6"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/y6"
            android:text="下载"
            android:textColor="@drawable/color_discover_main_greyblack_selectstyle"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

</RelativeLayout>