<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y96"
    android:background="@color/title_color"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_title_backicon"
        android:layout_width="@dimen/x100"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/x50" />

    <ImageView
        android:layout_width="@dimen/x34"
        android:layout_height="@dimen/y34"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x20"
        android:src="@drawable/title_back_icon" />

    <TextView
        android:id="@+id/tv_title_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/x38" />

    <LinearLayout
        android:id="@+id/ll_title_talk"
        android:layout_width="@dimen/x420"
        android:layout_height="@dimen/y72"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_talk_add"
            android:layout_width="@dimen/x210"
            android:layout_height="match_parent"
            android:background="@drawable/title_talk_left_style"
            android:gravity="center"
            android:text="我加入的"
            android:textColor="@drawable/color_maincolor_white_style"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_talk_create"
            android:layout_width="@dimen/x210"
            android:layout_height="match_parent"
            android:background="@drawable/title_talk_right_style"
            android:gravity="center"
            android:text="我创建的"
            android:textColor="@drawable/color_maincolor_white_style"
            android:textSize="@dimen/x30" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x20"
        android:text="--"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/x32"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_title_righticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="@dimen/x20"
        android:src="@drawable/icon_add_pic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title_uploadvideo"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y60"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/shape_border_white8"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/word_black"
        android:textSize="@dimen/x32"
        android:visibility="gone" />

</RelativeLayout>