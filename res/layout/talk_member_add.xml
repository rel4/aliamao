<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_greywhite"
    android:orientation="vertical" >

    <include layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/rl_groupmember_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y70"
        android:layout_marginTop="@dimen/y30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x40" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/x42"
            android:layout_height="@dimen/y42"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/search_icon" />

        <EditText
            android:layout_width="@dimen/x576"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView1"
            android:background="@drawable/shape_border_circle"
            android:ems="10" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:layout_marginTop="@dimen/y30"
        android:background="@color/bg_white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:weightSum="3" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y130"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_address_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="添加通讯录好友 "
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <View
                style="@style/vertical_line_style"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y130"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_qq_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="添加qq好友 "
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <View
                style="@style/vertical_line_style"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y30"
                android:layout_marginTop="@dimen/y30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/y130"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/add_weixin_friend" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:text="添加微信好友 "
                    android:textColor="@color/word_greyblack"
                    android:textSize="@dimen/x26" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_talkmember_addlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
    </ListView>

    <ImageView
        android:id="@+id/iv_talkmember_noadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y224"
        android:src="@drawable/no_recommend_friend" />

</LinearLayout>